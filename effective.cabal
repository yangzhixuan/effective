cabal-version:       3.0
name:                effective
version:             0.1.0.0
synopsis:            Effect handlers
description:         Effect handlers
license:             BSD-3-Clause
license-file:        LICENSE
author:              Nicolas Wu
maintainer:          nicolas.wu@gmail.com
-- copyright:
category:            Control
build-type:          Custom
extra-source-files:
    docs/*.md

custom-setup
  setup-depends:
    base,
    Cabal >= 3.8.1.0

source-repository head
  type: git
  location: https://github.com/zenzike/effective

library
  default-language: GHC2021
  exposed-modules:
    Control.Effect
    Control.Effect.Catch
    Control.Effect.Cut
    Control.Effect.Except
    Control.Effect.IO
    Control.Effect.Nondet
    Control.Effect.State
    Control.Effect.Throw
    Control.Effect.Writer
    Control.Monad.Graded
    Data.Functor.Composes
    Data.HFunctor
    Data.HFunctor.HComposes
    Data.CutList
    Data.List.Kind
  hs-source-dirs:
    src
  build-depends:
    base, transformers, ghc,
    containers,
    sop-core

test-suite docs
  type:          exitcode-stdio-1.0
  build-depends: base, transformers, sop-core, effective, hedgehog
  main-is:       Main.hs
  ghc-options:   -threaded
  hs-source-dirs: docs
  build-tool-depends: markdown-unlit:markdown-unlit>=0.6
  default-language: GHC2021
  other-modules:
    Error,
    Graded,
    Nondet,
    Parser,
    State

test-suite readme
  type:          exitcode-stdio-1.0
  ghc-options:   -threaded
  main-is:       README.hs
  default-language: GHC2021
  hs-source-dirs:  .
  build-depends: base, sop-core, transformers, effective
  build-tool-depends: markdown-unlit:markdown-unlit>=0.6
